<%- include('header',{role,role}); %> 

<div class="col-sm-10 " style=" margin-top: 10px; ">


    <!-- Modal -->
    <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
         <div class="modal-content">
            <div class="modal-header">
               <h5 class="modal-title" id="modal-title">
                 
               </h5>
               <button type="button" class="close" data-dismiss="modal" aria-label="Close">
               <span aria-hidden="true">&times;</span>
               </button>
            </div>
            <div class="modal-body" id="modal-body">
            </div>
         </div>
      </div>
    </div>  

    

<div class="modal fade modalEditClass" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="false">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header text-center">
          <h4 class="modal-title w-100 font-weight-bold text-secondary ml-5">DELETE ORDER</h4>
          <button type="button" id="close-delete" class="close text-secondary" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
<div class="modal-body mx-3 modal-inputs">

    <form id="del-order-form" method="DELETE">
           
                    <div class="md-form mb-5">
                            <label data-error="wrong" data-success="right" for="formNameEdit15">Are you sure to delete this order?</label>
                          </div>      
        <div class="modal-footer d-flex justify-content-center editInsideWrapper">
          <button id="del-order" type="button" class="btn btn-outline-secondary btn-block editInside" data-dismiss="modal">DELETE order

            <i class="far fa-paper-plane ml-1"></i>
          </button>
            </div>
    </form>            
</div>
      </div>
    </div>
  </div>

  <div class="modal fade modalEditClass" id="editModal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="false">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header text-center">
          <h4 class="modal-title w-100 font-weight-bold text-secondary ml-5">Edit My Order</h4>
          <button type="button" id="close-edit" class="close text-secondary" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
<div class="modal-body mx-3 modal-inputs">

    <form id="edit-OrderForm" method="PUT">

            <div class="col-sm-10">
                    <label for="exampleFormControlInput1">Order Status</label>
                    </div>

            <div class="md-form mb-5">
                                    
                    <select name="status" id="status" class="form-control">
                            <option value="" disabled selected>Choose your option</option>
                            <option value="cooking">cooking</option>
                            <option value="served">served</option>
                            <option value="pending">pending</option>
                            <option value="cooked">cooked</option>                                 
                    </select>
            </div>
            <div class="col-sm-10">
                    <label for="exampleFormControlInput1">Choose Cook</label>
                    </div>

            <div class="md-form mb-5">
                                    
                    <select name="kitchen" id="kitchen" class="form-control">
                            <option value="" disabled selected>Choose your option</option>
                                                            
                    </select>
            </div>

            <div class="md-form mb-5">
                <label data-error="wrong" data-success="right" for="formOfficeEdit15">Order Time</label>
                <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
                  <input type="text" class="form-control datetimepicker-input" name="time" id="order_time" data-target="#datetimepicker1" />
                  <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
                          <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                  </div>
                </div>       
              </div>
  

              <div id= "alert-success" class="alert alert-danger alert-dismissible" style="display:none">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong></strong>
        </div>
        
        <div id= "alert-danger" class="alert alert-success alert-dismissible" style="display:none">
                                            
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <strong></strong>
  </div>

        <div class="modal-footer d-flex justify-content-center editInsideWrapper">
          <button id="edit-order" type="button" class="btn btn-outline-secondary btn-block editInside">Edit Order

            <i class="far fa-paper-plane ml-1"></i>
          </button>
            </div>
    </form>            
</div>
      </div>
    </div>
  </div>


    <div>
        <h5 id="dataTableHeading"></h5>
        <table id="dataTable" class="display" style="width:100%;">
            <thead>
                <tr>
                    <th>Order No.</th>
                    <th>Customer</th>
                    <th>Cook</th>
                    <th>Total Amount</th>
                    <th>Order Time</th>
                    <th>Order Status</th>
                    <th>Payment Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
<div id="test_div"  style="display:none" data-id=<%= emp_id %>></div>

<script type="text/javascript" src="/js/my-order.js"></script>
<%- include('footer'); %>
