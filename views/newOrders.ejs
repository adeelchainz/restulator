        <div class="container">                             
                <form id="addOrderForm" method="POST">
                        <div class="form-row">
                          <div class="form-group col-md-3">
                            <label for="exampleFormControlInput1">Choose Table </label>
                            <!-- <input type="number" class="form-control" id="select-table" placeholder="1" required> -->
                            <select id="select-table" class="form-control" required >
                                <option value="" disabled selected>Choose your option</option>

                            </select>                                  
                          </div>


                                     <div class="form-group col-md-3">
                                        <label for="exampleFormControlInput1">Customer</label>
                                        <select  id="customer" class="form-control" required>
                                        <option value="" disabled selected>Choose your option</option>
                                        </select>
                                        <a href="/add-customer" class="btn btn-link" role="button" aria-pressed="true">Add New Customer</a>
                                      </div>

                                      

                                      <div class="form-group col-md-3">
                                        <label for="exampleFormControlInput1">Cook</label>
