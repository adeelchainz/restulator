<%- include('header',{role:role}); %>
<div class="col-sm-10  " style="margin-top: 10px; ">

        <div class="container">
                <div id="tableDeleteModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <!-- <h3 id="modalTitle"> </h3> -->
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            </div>
                            <div class="modal-body" id="tableDeleteModalBody">

                            </div>
                            <div class="modal-footer">
                                <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="tableEditModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h3 id="modalTitle"> Edit Table</h3>
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                </div>
                                <div class="modal-body" id="modalBody">
                                        <div class="container-fluid">
                                                <form id="tableEditForm" >
                                                        <div class="form-group row">
                                                                <div class="col-sm-4">
                                                                        <label for="exampleFormControlInput1">Change Capacity </label>
                                                                </div>
                                        
                                                                <div class="col-sm-6">
                                                                        <input type="number" class="form-buttoncontrol" name="table_capacity" id="table_capacity" placeholder= "E.g 5" required>
                                                                </div>                                                
                                        
                                                        </div>
                                                        <div class="form-group row">

                                                                <div class="col-sm-4">
                                                                <label for="exampleFormControlInput1">Choose  Status </label>
                                                                </div>
                                                                <div class="col-sm-6">
                                                                        <select id="table_status_selectlist" class="form-control" required>
                                                                                        <option value="" disabled selected>Choose Table Status</option>
                                                                                        <option value='active'>Active</option>
                                                                                        <option value="in-active">In-Active </option>
                                        
                                                                        </select>
                                                                </div>
                                                        </div>                                                                                                            


                                                        <div class="form-group">
                                                                        <!-- <div class="col-sm offset-sm-2"> -->
                                                                        <button  id="tableEditButton"  type="button"  class="btn btn-success"  > Save Table </button>
                                                                        <!-- </div> -->
                                                        </div>
                                                        <div id= "modal-alert-success" class="alert alert-success alert-dismissible"  style="display: none;">
                                                        
                                                                <button type="button" class="close" data-dismiss="alert">&times;</button>
                                                                <strong>Table Successfully Edited!</strong>
                                                        </div>
                                                        <div id= "modal-alert-danger" class="alert alert-danger alert-dismissible"  style="display: none;">
                                                                <button type="button" class="close" data-dismiss="alert">&times;</button>
                                                                <strong>Table could not be Edited, Check your connection and try again!</strong>
                                                        </div>                                                                                                                                                                                                                                                                                                                                                                                                                                                                       






                                                </form>



                                        </div>

                                </div>
                                <div class="modal-footer" id="modalFooter">
                                    <!-- <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button> -->
                                </div>
                            </div>
                        </div>
                    </div>                             

                <div class="table-responsive">
                        <table id="tables_details" class="display" style="width:100%;">
                            <thead>
                                <tr>
                                    <th>Table No.</th>
                                    <th>Capacity</th>
                                    <th>Status</th>
                                    <th>Action</th>                                    
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </tfoot>
                        </table>
                        </div>







            </div>

        



        </div>
        
        
        
        
        
        
        
        
        </div>
        
        
        
        
</div>

<script src="/js/allTable.js"></script>

