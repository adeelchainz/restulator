<%- include('header',{role:role}); %>
<div class="col-sm-10 " style="  margin-top: 10px; ">

<!-- Modal -->
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
           <div class="modal-content">
              <div class="modal-header">
                 <h5 class="modal-title" id="modal-title">
                 </h5>
                 <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                 <span aria-hidden="true">&times;</span>
                 </button>
              </div>
              <div class="modal-body" id="modal-body">
              </div>
           </div>
        </div>
      </div>  

    <div class="modal fade modalEditClass" id="myModal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="false">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header text-center">
              <h4 class="modal-title w-100 font-weight-bold text-secondary ml-5">ADD Employee Category</h4>
              <button type="button" class="close text-secondary" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
<div class="modal-body mx-3 modal-inputs">

        <form id="addCategoryForm" method="POST">           
                        <div class="md-form mb-5">
                                <input type="text" id="category" class="form-control validate" required>
                              </div>
                              
            <div class="modal-footer d-flex justify-content-center editInsideWrapper">
              <button id="add-cat" formmethod="POST" type="button" class="btn btn-outline-secondary btn-block editInside">Add Category

                <i class="far fa-paper-plane ml-1"></i>
              </button>
                </div>
        </form>
 </div>
          </div>
        </div>
      </div>


      <div class="col-sm-10 " >

        <div class="container">

        <form id="itemAddForm" method="POST" enctype="multipart/form-data">

                <div class="form-group row">

                        <div class="col-sm-2">
                        <label for="exampleFormControlInput1">Enter Name </label>
                        </div>
                        <div class="col-sm">
                        <input type="text" class="form-control" name="empName" id="empName" placeholder="Ahmed" required>
                         </div>
                </div>
                <div class="form-group row">
                        <div class="col-sm-2">
                        <label for="exampleFormControlInput1">Enter CNIC</label>
                        </div>

                        <div class="col-sm">
                            <input type="text" class="form-control" name="empCNIC" id="empCNIC"  minlength="13" maxlength="13" placeholder="XXXXXXXXXXXXX" required>                                           
                         </div>
                    </div> 
                <div class="form-group row">
                        <div class="col-sm-2">
                        <label for="exampleFormControlInput1">Enter Address</label>
                        </div>

                        <div class="col-sm">
                            <textarea rows="3" class="form-control" name="empAdd" id="empAdd" placeholder="Street number 10" required></textarea>                                            
                        </div>
                    </div> 
                <div class="form-group row">
                        <div class="col-sm-2">
                        <label for="exampleFormControlInput1">Enter Mobile Number</label>
                        </div>

                        <div class="col-sm">
                            <input type="tel" class="form-control" name="empMobile" id="empMobile" pattern="[0-9]{11}"  minlength="11" maxlength="11" placeholder="XXXXXXXXXXX" required>                                            
                        </div>
                    </div> 
                <div class="form-group row">
                        <div class="col-sm-2">
                        <label for="exampleFormControlInput1">Enter Telephone Number</label>
                        </div>

                        <div class="col-sm">
                            <input type="text" class="form-control" name="empTel" id="empTel"  minlength="11" maxlength="11" placeholder="XXXXXXXXXXX">                                            
                        </div>
                    </div> 
                <div class="form-group row">
                        <div class="col-sm-2">
                        <label for="exampleFormControlInput1">Enter Created at</label>
                        </div>

                        <div class="col-sm">
                                <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
                                        <input type="text" class="form-control datetimepicker-input" name="empCreate" id="empCreate" data-target="#datetimepicker1" required />
                                        <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
                                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                </div>                                                        
                         </div>
                    </div> 
                    
                <div class="form-group row">
                        <div class="col-sm-2">
                        <label for="exampleFormControlInput1">Enter Gender</label>
                        </div>

                        <div class="col-sm">
                        <select id="empGender"  class="form-control" required>
                                <option value="" disabled selected>Choose your option</option>
                                <option value="M">M</option>
                                <option value="F">F</option>                                                              
                        </select>
                        </div>
                        
                    </div> 
                <div class="form-group row">
                        <div class="col-sm-2">
                        <label for="exampleFormControlInput1">Enter Salary</label>
                        </div>

                        <div class="col-sm">
                            <input type="number" class="form-control" name="empSal" id="empSal" placeholder="60000" required>                                            </div>
                    </div> 
                <div class="form-group row">
                        <div class="col-sm-2">
                        <label for="exampleFormControlInput1">Enter Join date</label>
                        </div>

                        <div class="col-sm">
                            <input type="date" class="form-control" name="empJoining" id="empJoining" placeholder="E.g " required>                                            </div>
                    </div> 
                <div class="form-group row">
                        <div class="col-sm-2">
                        <label for="exampleFormControlInput1">Enter Birth date</label>
                        </div>

                        <div class="col-sm">
                            <input type="date" class="form-control" name="empBirthday" id="empBirthday" placeholder="2020/05/10" >                                            </div>
                    </div> 
         
                <div class="form-group row">
                        <div class="col-sm-2">
                        <label for="exampleFormControlInput1">Enter Branch id</label>
                        </div>

                        <div class="col-sm">
                            <input type="text" class="form-control" name="empBranch" id="empBranch" placeholder="101" > 
                        </div>
                    </div> 
                
                <div class="form-group row">

                <div class="col-sm-2">
                        <label for="exampleFormControlInput1">Choose Employee Category</label>
                </div>

                <div class="col-sm-4">
                                <select id="selectlist" class="form-control" required>
                                                <option value="" disabled selected>Choose your option</option>
                                               
                                </select>
                </div>

                <div class="col-sm">
                        <button type="button"  data-target="#myModal"  data-toggle="modal" class="btn btn-primary mb-2" id="addDish">Add Category</button>
                </div>
         </div> 
                <div>
                        <input id="image" type="file" name="image"  accept="image/*">

                </div>


                <div class="form-group row">
                        <div class="col-sm offset-sm-2">
                        <button  id="itemAddBtn" formmethod="POST" type="submit" class="btn btn-success"  >Add Employee</button>
                        </div>
                </div>

        </form>

        </div>

</div>


<script src="/js/addEmployee.js"></script>
<%- include('footer'); %>