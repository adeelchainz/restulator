                        <div class="col-sm-10" style=" margin-top: 10px;" >

                                <div class="container">

                                  <h3 style="text-align: center;padding: 50px;">Add Supplier</h3>
                                
                                        <form id="formSupplier" action="#" style="padding-bottom: 40px;">
                                                <div class="form-row">
                                                  <div class="form-group col-md-6">
                                                    <label for="inputSupplierName">Name</label>
                                                    <input type="text" class="form-control" id="inputSupplierName" placeholder="Supplier/Company Name" required>
                                                  </div>
                                                  <div class="form-group col-md-6">
                                                    <label for="inputSupplierCnic">CNIC</label>
                                                    <input type="text" class="form-control" id="inputSupplierCnic" minlength="13" maxlength="15" placeholder="XXXXX-XXXXXXX-X" required>
                                                  </div>
                                                </div>
                                                <div class="form-row">
                                                        <div class="form-group col-md-6">
                                                          <label for="inputSupplierMobile">Mobile</label>
                                                          <input type="text" class="form-control" id="inputSupplierMobile" minlength="11" maxlength="12" placeholder="XXXX-XXXXXXX" required>
                                                        </div>
                                                        <div class="form-group col-md-6">
                                                          <label for="inputSupplierTelephone">Telephone</label>
                                                          <input type="text" class="form-control" id="inputSupplierTelephone" minlength="7" maxlength="12" placeholder="XXXX-XXXXXXX" required>
                                                        </div>
                                                      </div>
                                                <div class="form-group">
                                                  <label for="inputSupplierDesc">Address</label>
                                                  <textarea class="form-control" id="inputSupplierAddress" rows="3" placeholder="Detailed Address of the Supplier/Company" required></textarea>
                                                </div>
                                                <div class="col text-center">
                                                   <button id= "btn" type="submit" class="btn btn-primary">Add Supplier</button>
                                                </div>
                                          
                                        </form>

                                        <h3 style="text-align: center;padding: 30px;">All Suppliers</h3>

                                        <table id="dataTable" class="display" style="width:100%" >
                                                <thead>
                                                    <tr>
                                                        <th>No.</th>
                                                        <th>Name</th>
                                                        <th>CNIC</th>
                                                        <th>Mobile</th>
                                                        <th>Telephone</th>
                                                        <th>Address</th>
                                                        <th>Action</th>
                                                        <th>View</th>
                                                    </tr>
                                                </thead>
                                                <tfoot>
                                                    <tr>
                                                        <td></td>
                                                        <td></td>
                                                        <td></td>
                                                        <td></td>
                                                        <td></td>
                                                        <td></td>
                                                        <td></td>
                                                        <td></td>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                </div>
        
                        </div>



