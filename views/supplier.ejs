        <div class="modal fade modalEditClass" id="myModal" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header text-center">
                      <h4 class="modal-title w-100 font-weight-bold text-secondary ml-5">Edit Supplier Details</h4>
                      <button type="button" class="close text-secondary" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                  <div class="modal-body mx-3 modal-inputs">
                        <form id="editSuppForm" action="#">
                                <div class="md-form mb-5">
                                <label data-error="wrong" data-success="right" for="formNameEdit">Name</label>
                                <input type="text" name="formNameEditName" id="formNameEdit" class="form-control validate" required>
                                </div>
                                <div class="md-form mb-5">
                                <label data-error="wrong" data-success="right" for="formnicEdit">CNIC</label>
                                <input type="text" name="formNicEditName" id="formNicEdit" class="form-control validate" minlength="13" maxlength="15" required>
                                </div>
                                <div class="md-form mb-5">
                                <label data-error="wrong" data-success="right" for="formMobileEdit">Mobile</label>
                                <input type="text" name="formMobileEditName" id="formMobileEdit" class="form-control validate" minlength="11" maxlength="11" required>
                                </div>
                                <div class="md-form mb-5">
                                <label data-error="wrong" data-success="right" for="formTelephoneEdit">Telephone</label>
                                <input type="text" id="formTelephoneEdit" class="form-control validate" minlength="7" maxlength="11" required>
                                </div>
                                <div class="md-form mb-5">
                                <label data-error="wrong" data-success="right" for="formAddressEdit">Address</label>
                                <textarea type="text" rows="2" id="formAddressEdit" class="form-control validate" required></textarea>
                                </div>
                                <div class="modal-footer">
                                <div class="col text-center">
                                  <input id= "editEmp" type="button" class="btn btn-outline-secondary btn-block editInside" value="Edit Supplier">
                               </div>
                                </div>
                        </form>
                  </div>
                </div>
            </div>
