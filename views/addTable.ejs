<%- include('header',{role:role}); %>
<div class="col-sm-10  " style="margin-top: 10px; ">

        <div class="container">                                        

        
        <form id="tableAddForm" method="POST" >
                <div class="form-group row">
                        <div class="col-sm-2">
                                <label for="exampleFormControlInput1">Enter Capacity </label>
                        </div>

                        <div class="col-sm-4">
                                <input type="number" class="form-buttoncontrol" name="table_quantity" id="table_quantity" step=1  placeholder= "E.g 5" required>
                        </div>                                                

                </div>
                <div class="form-group row">

                        <div class="col-sm-2">
                        <label for="exampleFormControlInput1">Choose  Status </label>
                        </div>
                        <div class="col-sm-4">
                                <select id="table_status_selectlist" class="form-control" required>
                                                <option value="" disabled selected>Choose Table Status</option>
                                                <option value='active'>Active</option>
                                                <option value="in-active">In-Active </option>

                                </select>
                        </div>
                </div>
                <div class="form-group row">
                        <div class="col-sm offset-sm-2">
                        <button  id="tableAdd"  type="submit" class="btn btn-success" formmethod="POST" >Add Table</button>
                        </div>
                    </div>
                    <div id= "alert-success" class="alert alert-success alert-dismissible"  style="display: none;">
                                                        
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <strong>Table Successfully !</strong>
                    </div>
                    <div id= "alert-danger" class="alert alert-danger alert-dismissible"  style="display: none;">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <strong>Table could not be added, Check your connection and try again!</strong>
                    </div>                                







            </form>

        </div>

        



</div>








</div>




</div>

<script src="/js/addTable.js"></script>

<%- include('footer'); %>