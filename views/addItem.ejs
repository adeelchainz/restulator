        <form id="itemAddForm" method="POST" enctype="multipart/form-data">

                

                <div class="form-group row">

                        <div class="col-sm-2">
                        <label for="exampleFormControlInput1">Enter Item Name </label>
                        </div>
                        <div class="col-sm">
                        <input type="text" class="form-control" name="itemName" id="itemName" pattern="[a-zA-Z0-9_ ]+" placeholder="E.g Bread" required>
                         </div>
                </div>
                <div class="form-group row">
                        <div class="col-sm-2">
                        <label for="exampleFormControlInput1">Enter Quantity</label>
                        </div>

                        <div class="col-sm">
                        <input type="number" class="form-buttoncontrol" name="itemQuantity" min="0" id="itemQuantity" placeholder= "E.g 5">
                        </div>
                </div>
                <div class="form-group row">

                                <div class="col-sm-2">
                                <label for="exampleFormControlInput1">Enter Item Unit </label>
                                </div>
                                <div class="col-sm-6">
                                <input type="text" class="form-control" name="itemUnit" id="itemUnit" pattern="[a-zA-Z0-9]+"  placeholder="E.g Kg" required>
                                 </div>
                        </div>                
                <div class="form-group row">
                    <div class="col-sm-2">
                    <label for="exampleFormControlInput1">Enter Item Description</label>
                    </div>

                    <div class="col-sm">
                        <input type="text" class="form-control" name="itemDescrip" id="itemDescrip" placeholder="E.g " >
                    </div>
                </div> 
                <div class="form-group row">

                                <div class="col-sm-2">
                                        <label for="exampleFormControlInput1">Choose Item Image</label>
                                </div>

                                <div class="col-sm">
                                        <input id="image" type="file" accept="image/x-png,image/gif,image/jpeg" name="image" >

                                </div>
                                                                                
                                

                        </div>                                        
                <div class="form-group row">

                <div class="col-sm-2">
                        <label for="exampleFormControlInput1">Choose Item Category</label>
                </div>

                <div class="col-sm-4">
                                <select id="selectlist" class="form-control" >
                                        <option value="" disabled selected>Choose your option</option>

                                </select>
                </div>
                <div class="col-sm-1">
                        <button id="ItemCategAdd" class="btn btn-danger " data-toggle="modal" data-target="#CategAddModal"><i class="fa fa-plus"></i></button>
                </div>
                </div>


                <div class="form-group row">
                        <div class="col-sm offset-sm-2">
                        <button  id="itemAddBtn"  type="submit" class="btn btn-success" formmethod="POST"  >Add Item</button>
                        </div>
                </div>

                
                <div id= "alert-success" class="alert alert-success alert-dismissible" style="display: none;">
                                                    
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Item Successfully Added!</strong>
                </div>
                <div id= "alert-danger" class="alert alert-danger alert-dismissible"  style="display: none;">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Item could not be added, Check your connection and try again!</strong>
                </div>
